<h1>Books</h1>

<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
    </tr>

    <% @books.each do |book| %>
    <tr>
      <span>><th><%= book.title %></th></span>
      <span><th><%= book.body %></th></span>
      <th><%= link_to "show","/books/#{book.id}" %></th>
      <th><%= link_to "Edit",edit_book_path(book) %></th>
      <th><%= link_to "Destroy",book_path(book),method: :delete %></th>
    </tr>
    <% end %>

  </tbody>


</table>
<%= form_with model: Book do |f| %>

<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_field :body %>
 <%= f.submit 'Create Book' %>
<% end %>